@model Pool

<h3>@Model.PoolID Information</h3>

<table class="table">
    <tr>
        <th>PoolID</th>
        <th>PoolLocation</th>
        <th>PoolType</th>
    </tr>
    <tr>
        <td>@Model.PoolID</td>
        <td>@Model.PoolLocation</td>
        <td>@Model.PoolType</td>
    </tr>
</table>

<li>
<a class="btn btn-outline-secondary my-3 text-fancy semi-circle" href="/Pool/UpdatePool/@Model.PoolID">Update the ID, location, or type</a> &nbsp;
</li>

<li>
<a class="btn btn-outline-secondary my-3 text-fancy semi-circle" href="/Chem/ViewChem/@Model.PoolID">View the chemical levels</a> &nbsp;

<a class="btn btn-outline-secondary my-3 text-fancy semi-circle" href="/Chem/UpdateChem/@Model.PoolID">Update the chemical levels</a> &nbsp;
</li>

<li>
<a class="btn btn-outline-secondary my-3 text-fancy semi-circle" href="/Maintenance/ViewMaintenance/@Model.PoolID">View the maintenace</a> &nbsp;

<a class="btn btn-outline-secondary my-3 text-fancy semi-circle" href="/Maintenance/UpdateMaintenance/@Model.PoolID">Update the maintenace</a> &nbsp;
</li>


<div style="display: block">

    @using (Html.BeginForm("DeletePool", "Pool", "Post"))
    {
        <input type="hidden" asp-for="PoolID" value="@Model.PoolID" />
        <li>
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this pool" />
        </li>
    }
</div>



